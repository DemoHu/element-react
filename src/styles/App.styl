@import './mixin.styl';

#root{
  .tab{
    width: 100%;
    display: flex;
    height: 40px;
    line-height: 40px;
    bottom-1px(rgba(7,17,27,.1));
    .tab-item{
      flex: 1;
      text-align: center;
      a{
        display:block;
        font-size:14px;
        color:rgb(77,85,93);
        &.active{
          color:rgb(240,20,20)
        }
      }
    }
  }
}
.goods,.ratings,.seller{
  background: #fff;
}
.container{
  width: 100%;
  overflow hidden;
}
.right-sild-enter,
.right-sild-exit,
.left-sild-exit,
.left-sild-enter{
  position absolute;
  z-index: 10;
  transition: all 250ms ease-in;
  .food-warp {
    display none
  }
}
.right-sild-enter{
  transform: translateX(100%);
}
.left-sild-enter{
  transform: translateX(-100%);
}
.right-sild-exit,.left-sild-exit{
  transform: translateX(0);
}


.left-sild-enter.left-sild-enter-active,
.right-sild-enter.right-sild-enter-active {
  transform: translateX(0);
}
.right-sild-exit.right-sild-exit-active{
  transform: translateX(-100%);
}
.left-sild-exit.left-sild-exit-active{
  transform: translateX(100%);
}